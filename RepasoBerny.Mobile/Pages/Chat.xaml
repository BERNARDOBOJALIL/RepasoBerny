<?xml version="1.0" encoding="utf-8"?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="RepasoBerny.Mobile.Pages.Chat"
    Title=""
    BackgroundColor="White">

    <!-- Grid principal con 2 filas:
         1) Barra fija (fila 0)
         2) Contenido desplazable (fila 1) -->
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Barra Amarilla Fija (fila 0) -->
        <StackLayout Grid.Row="0" 
                     BackgroundColor="{StaticResource YellowCoppel}" 
                     Padding="0">
            <Label 
                Text="Chats"
                FontSize="24"
                FontAttributes="Bold"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                TextColor="{StaticResource BlueCoppel}"
                Margin="10"/>
        </StackLayout>

        <!-- Contenido desplazable (fila 1) -->
        <ScrollView Grid.Row="1">
            <!-- Grid interno para organizar search bar, notificaciones, mensajes y botón -->
            <Grid RowDefinitions="Auto,Auto,*,Auto">

                <!-- Barra de Búsqueda (fila 0) -->
                <Border Grid.Row="0" 
                        Margin="15" 
                        HeightRequest="40"
                        StrokeShape="RoundRectangle 10"
                        Stroke="Black"
                        Background="#F0F0F0">
                    <Entry Placeholder="Micro Empresario" 
                           BackgroundColor="Transparent"
                           VerticalOptions="Center"
                           Margin="10,0"
                           TextColor="Black"
                           />
                </Border>

                <!-- Sección de Notificaciones (fila 1) -->
                <StackLayout Grid.Row="1" Spacing="10" Padding="15">
                    <!-- Primera notificación -->
                    <Border StrokeShape="RoundRectangle 10" 
                            Stroke="LightGray" 
                            Background="#E6F7FF">
                        <StackLayout Padding="15">
                            <Grid>
                                <Label Text="{Binding FirstNotification.Title}" 
                                       TextColor="#0072C6"
                                       FontAttributes="Bold"
                                       FontSize="16"/>
                                <Label Text="{Binding FirstNotification.Time}" 
                                       TextColor="Gray" 
                                       HorizontalOptions="End"/>
                            </Grid>
                            <Label Text="{Binding FirstNotification.Description}" 
                                   TextColor="Black" 
                                   Margin="0,5,0,0"/>
                            <Label Text="{Binding FirstNotification.Date}" 
                                   TextColor="#0072C6"
                                   FontAttributes="Italic"
                                   FontSize="13"/>
                        </StackLayout>
                    </Border>

                    <!-- Segunda notificación -->
                    <Border StrokeShape="RoundRectangle 10" 
                            Stroke="LightGray" 
                            Background="#FFF9D9">
                        <StackLayout Padding="15">
                            <Grid>
                                <Label Text="{Binding SecondNotification.Title}" 
                                       TextColor="#C68B00"
                                       FontAttributes="Bold"
                                       FontSize="16"/>
                                <Label Text="{Binding SecondNotification.Time}" 
                                       TextColor="Gray" 
                                       HorizontalOptions="End"/>
                            </Grid>
                            <Label Text="{Binding SecondNotification.Description}" 
                                   TextColor="Black" 
                                   Margin="0,5,0,0"/>
                        </StackLayout>
                    </Border>
                </StackLayout>

                <!-- Sección de Mensajes (fila 2) -->
                <CollectionView Grid.Row="2"
                                ItemsSource="{Binding Messages}"
                                Margin="15">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <!-- Contenedor para cada chat -->
                            <Border StrokeShape="RoundRectangle 10"
                                    Stroke="LightGray"
                                    Margin="0,0,0,10">
                                <Grid ColumnDefinitions="Auto, *"
                                      Padding="10"
                                      BackgroundColor="White">

                                    <!-- Foto de perfil -->
                                    <Image Grid.Column="0"
                                           Source="user_coppel.png"
                                           WidthRequest="45"
                                           HeightRequest="45"
                                           Aspect="AspectFill"
                                           VerticalOptions="Center">
                                        <Image.Clip>
                                            <EllipseGeometry Center="22.5,22.5"
                                                             RadiusX="22.5"
                                                             RadiusY="22.5"/>
                                        </Image.Clip>
                                    </Image>

                                    <!-- Contenido del chat -->
                                    <Grid Grid.Column="1"
                                          RowDefinitions="Auto, Auto"
                                          ColumnDefinitions="*, Auto">
                                        <!-- Nombre y hora -->
                                        <Grid Grid.Row="0" ColumnDefinitions="*, Auto">
                                            <Label Text="{Binding Name}" 
                                                   TextColor="Black" 
                                                   FontAttributes="Bold"
                                                   FontSize="14"
                                                   VerticalOptions="Center"/>
                                            <Label Text="{Binding Time}" 
                                                   TextColor="Gray" 
                                                   Grid.Column="1"
                                                   HorizontalOptions="End"
                                                   VerticalOptions="Center"/>
                                        </Grid>

                                        <!-- Último mensaje -->
                                        <Label Grid.Row="1"
                                               Text="{Binding LastMessage}" 
                                               TextColor="Gray"
                                               FontSize="13"
                                               VerticalOptions="Center"/>

                                        <!-- Burbuja de notificación (ajustada para no chocar con la hora) -->
                                        <Frame BackgroundColor="CadetBlue"
                                               CornerRadius="10"
                                               Padding="3"
                                               BorderColor="White"
                                               HorizontalOptions="End"
                                               VerticalOptions="Start"
                                               Margin="0,0,20,0"
                                               TranslationY="20"
                                               HasShadow="False"
                                               IsVisible="{Binding IsUnread}">
                                            <Label Text="{Binding UnreadCount}"
                                                   TextColor="White"
                                                   FontSize="12"
                                                   HorizontalOptions="Center"
                                                   VerticalOptions="Center"/>
                                        </Frame>
                                    </Grid>
                                </Grid>

                                <!-- Cambia el color de fondo si hay mensajes no leídos -->
                                <Border.Triggers>
                                    <DataTrigger TargetType="Border"
                                                 Binding="{Binding IsUnread}"
                                                 Value="true">
                                        <Setter Property="BackgroundColor" Value="#F2F8FF" />
                                    </DataTrigger>
                                </Border.Triggers>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <!-- Botón de Comunicación Masiva (fila 3) -->
                <Button Grid.Row="3" 
                        Text="Enviar comunicación masiva" 
                        BackgroundColor="#00BFFF" 
                        TextColor="White"
                        Padding="15"
                        Margin="15"
                        Clicked="OnMassCommButtonClicked"/>
            </Grid>
        </ScrollView>
    </Grid>
</ContentPage>

